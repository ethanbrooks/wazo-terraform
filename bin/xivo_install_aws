#!/bin/bash

function configure_ha() {
    wget --no-check-certificate https://raw.githubusercontent.com/sboily/xivo-aws/master/bin/xivo_ctl_ha -O /tmp/xivo_ctl_ha
    python /tmp/xivo_ctl_ha
    xivo-service restart
}

function add_config_wizard() {
    apt-get -yyq install xivo-dev-scripts
    IP=$(/sbin/ifconfig eth0 | grep "inet addr" | awk -F: '{print $2}' | awk {'print $1}')
    cat << EOF > /etc/xivo/xivo-tools/configure.d/default.ini
[general]
hostname = xivo
domain = aws.proformatique.com
timezone = America/Montreal
lang = fr_FR

[network]
iface = eth0
address = $IP
netmask = 255.255.0.0
gateway = 10.0.0.1
nameservers = 8.8.8.8, 9.9.9.9

[entity]
name = entity
displayname = Entity
description = wizard configuration
EOF

    xivo-service restart
    xivo-configure
}

function install_xivo() {
    wget http://mirror.xivo.io/fai/xivo-migration/xivo_install_current.sh -O /tmp/xivo_install_current.sh
    bash /tmp/xivo_install_current.sh -r
}

function add_swap() {
    dd if=/dev/zero of=/swap bs=1024 count=524288
    chown root:root /swap
    chmod 0600 /swap
    mkswap /swap
    swapon /swap
}

add_swap
install_xivo
add_config_wizard
configure_ha
